<div class="col-12">
  <h1 style="color:#cc3333;">Our Book Collection</h1>

  <div class="well">
    <% @books.each do |book| %>
    <ul>
      <li> <%= link_to "#{book.title}", book_path(book) %> </li>
      <%= link_to 'Delete', book_path(book), :method => :delete %>
    </ul>
    <% end %>
  </div>
</div>

<div class="well">
  <%= link_to "Add New Book", new_book_path %>
</div>
